            <children>
               <GridPane id="ShapeSelectionGrid" alignment="TOP_CENTER" style="-fx-border-color: grey;">
                 <columnConstraints>
                   <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
